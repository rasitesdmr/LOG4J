<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- Console pattern -->
    <Appenders>
        <console name ="Console" target = "SYSTEM.OUT">
            <PatternLayout pattern = "%d{ISO8601} {%t} %-5level %logger{%36} - (%F : %L)-%msg%n"/>
        </console>
    </Appenders>

    <Loggers>
        <Root level = "INFO">
            <AppenderRef ref = "Console" />
        </Root>
    </Loggers>
</configuration>